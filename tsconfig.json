{
	"compilerOptions": {
		"outDir": "lib",
		"module": "commonjs",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"strict": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"declaration": true,
		"sourceMap": true,
		"target": "es2018",
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
